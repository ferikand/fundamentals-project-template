{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy:html": "cpx \"src/**/*.html\" dist",
    "copy:assets": "cpx \"src/assets/**/*\" dist/assets",
    "copy:js": "cpx \"src/js/**/*.js\" dist/js",
    "compile:scss": "sass src/scss:dist/css",
    "watch:scss": "sass src/scss:dist/css --watch",
    "watch:html": "cpx \"src/**/*.html\" dist --watch",
    "watch:assets": "cpx \"src/assets/**/*\" dist/assets --watch",
    "watch:js": "cpx \"src/js/**/*.js\" dist/js --watch",
    "dev": "concurrently \"npm:watch:*\" \"live-server dist\"",
    "lint:js": "eslint src/js/**/*.js",
    "lint:css": "stylelint src/scss/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint src/js/**/*.js --fix && stylelint src/scss/**/*.scss --fix",
    "build": "npm run clean && npm run copy:html && npm run copy:assets && npm run copy:js && npm run compile:scss",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cpx": "^1.5.0",
    "eslint": "^9.39.1",
    "live-server": "^1.2.2",
    "rimraf": "^5.0.7",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
