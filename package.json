{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "compile:scss": "sass src/scss:dist/css",
    "watch": "sass src/scss:dist/css --watch",
    "dev": "concurrently \"npm run watch\" \"live-server --open=src/index.html\"",
    "lint:js": "eslint src/js/**/*.js",
    "lint:css": "stylelint src/scss/**/*.scss",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:fix": "eslint src/js/**/*.js --fix && stylelint src/scss/**/*.scss --fix",
    "build": "echo \"Dummy build script required for Autocode Compile\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "live-server": "^1.2.2",
    "sass": "^1.93.3",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0"
  }
}
